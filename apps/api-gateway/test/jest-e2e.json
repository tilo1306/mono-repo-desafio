{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest-e2e.setup.ts"],
  "testTimeout": 30000,
  "transformIgnorePatterns": [
    "node_modules/(?!(@repo|@nestjs)/)"
  ],
  "moduleNameMapper": {
    "^@repo/(.*)$": "<rootDir>/../../packages/$1/src"
  }
}
