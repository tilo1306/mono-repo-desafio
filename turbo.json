{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {},
    "test:cov": {},
    "format": {},
    "migration:run": {
      "cache": false
    },
    "migration:generate": {
      "cache": false
    },
    "migration:revert": {
      "cache": false
    }
  }
}
